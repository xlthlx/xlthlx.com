{% extends "base.twig" %}

{% block content %}
	<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">


		<div class="row">
			<div class="col-md-8">

				<div class="row" id="push-container">

					<div class="col-12 d-flex">
						<div class="col-md-10 col-9 d-flex">
							<h2 class="display-4 pb-3 shadows">{{ lang == 'it'? post.title : post.title_en }}</h2>
						</div>
						{% include 'partial/tabs.twig' %}
					</div>

					<div class="col-md-12 text-break">

						<section class="page-content">
							<hr class="pt-0 mt-0 mb-4"/>
							{{ lang == 'it'? post.content : post.content_en }}
						</section>
					</div>
				</div>

			</div>

			<div class="col-md-4">
				<aside class="sidebar mt-md-0 mt-4 px-md-4 px-0">
					{% if page_sidebar %}
						{{ page_sidebar }}
					{% endif %}
				</aside>
			</div>
		</div>

	</article>
{% endblock %}
