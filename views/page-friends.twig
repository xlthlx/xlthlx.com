{% extends "base.twig" %}

{% block content %}

	<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">

		<div class="row">
			<div class="col-md-8">
				<h2 class="display-4 pb-3 shadows">{{ lang == 'it'? post.title : post.title_en }}</h2>
				<section class="page-content">
					<hr class="pt-0 mt-0 mb-4"/>
					<ul class="list-unstyled">
						{{ friends }}
					</ul>
					{{ lang == 'it'? post.content : post.content_en }}
				</section>
			</div>
			<div class="col-md-4">
				<aside class="sidebar mt-md-0 mt-4 ps-md-4 ps-0">
					{% if page_sidebar %}
						{{ page_sidebar }}
					{% endif %}
				</aside>
			</div>
		</div>

	</article>

{% endblock %}
