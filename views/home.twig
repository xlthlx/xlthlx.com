{% extends "base.twig" %}

{% block content %}

	{% if posts.pagination.current==1 %}
		{% include 'partial/sticky.twig' with { first_posts } %}
	{% endif %}

	{% for post in posts %}
		{{ loop.index0 is even ? '<div class="row mb-2">' }}
			{% include 'tease-home.twig' %}
		{% if loop.last %}
			</div>
		{% else %}
			{{ loop.index0 is odd ? '</div><hr class="pt-0 mt-0 mb-4"/>' }}
		{% endif %}
	{% endfor %}

	{% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}

{% endblock %}
