{% extends "base.twig" %}

{% block content %}

	{% for post in posts %}
		{{ loop.index0 is even ? '<div class="row mb-2">' }}
		{% if is_amp %}
			{% include 'amp/tease.twig' %}
		{% else %}
			{% if loop.index == 0 or loop.index == 1 %}
				{% include 'tease.twig' %}
			{% else %}
				{% include 'tease-post.twig' %}
			{% endif %}
		{% endif %}
		{% if loop.last %}
			</div>
		{% else %}
			{{ loop.index0 is odd ? '</div><hr class="pt-0 mt-0 mb-4"/>' }}
		{% endif %}
	{% endfor %}

	{% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}

{% endblock %}
