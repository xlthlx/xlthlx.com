<amp-sidebar id="sidebar" class="bg-dark" layout="nodisplay" side="right">
	<div class="d-flex align-items-end flex-column">
		<div class="my-2 ml-auto me-3">
			<button class="navbar-toggler text-white border-0 shadow-none" on="tap:sidebar.close">X</button>
		</div>
	</div>
	<nav aria-label="navbar" toolbar="(min-width: 784px)" toolbar-target="target-element">

		<ul>
			{% for item in menu.get_items %}
				{% set target = item.target? ' target="'~item.target~'"': '' %}
				<li class="nav-item {{ item.classes | join(' ') }}">
					<a class="nav-link" {{ target }}href="{{ item.link }}">{{ item.title }}</a>
				</li>
				{% if item.children %}
					<ul>
						{% for item in item.children %}
							{% set target = item.target? ' target="'~item.target~'"': '' %}
							<li>
								<a class="dropdown-item text-light"{{ target }} href="{{ item.link }}">
									{{ item.title }}
								</a>
							</li>
						{% endfor %}
					</ul>
				{% endif %}
			{% endfor %}
			<li class="my-3 mx-3">
				{% include 'searchform.twig' %}
			</li>
		</ul>

	</nav>
</amp-sidebar>
<header>
	<div class="container-fluid bg-light fixed-top">
		<div class="row">
			<div class="col-2">
				<h1 class="display-4 font-italic py-2 px-3 pt-md-2 pt-3 ps-md-4 ps-2">
					<a title="Homepage" class="text-white text-decoration-none"
					   href="{{ site.url }}">{{ site.name }}</a>
				</h1>
			</div>
			<div class="col-8">
				<p class="lead pt-4 mt-2 text-end text-white fs-6">{{ site.description }}</p>
			</div>
			<div class="col-2">
				<div class="mt-4 float-md-end pe-3">
					<button class="navbar-toggler text-white border-0 shadow-none" on="tap:sidebar.toggle" tabindex="0"
							aria-expanded="false" aria-label="{{ _e( 'Toggle navigation') }}">
						â˜°
					</button>
				</div>
			</div>
		</div>
	</div>
</header>
<div id="target-element">
</div>
