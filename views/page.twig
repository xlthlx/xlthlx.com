{% extends "base.twig" %}

{% block content %}
	<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">

		<div class="row">
			<div class="col-md-7">
				<h2 class="display-5 pb-3">
					{{ lang == 'it'? post.title : post.title_en }}
				</h2>
				<hr class="pt-0 mt-0 mb-4"/>
				<section class="page-content">
					{{ lang == 'it'? post.content : post.content_en }}
				</section>
			</div>
			<div class="col-md-1">
				{% include 'partial/tabs.twig' %}
			</div>
			<div class="col-md-4">
				<aside class="sidebar px-5">
					{% if page_sidebar %}
						{{ page_sidebar }}
					{% endif %}
				</aside>
			</div>
		</div>

	</article>
{% endblock %}
