<article class="tease tease-{{ post.post_type }}" id="tease-{{ post.ID }}">
	<div class="row g-0 border overflow-hidden flex-md-row mb-4 border-0 h-md-250 position-relative rounded-0">

		<h2 class="mb-1 h1 shadows"><a href="{{ post.link }}">{{ post.title }}</a></h2>
		<p class="text-muted">{{ post.date }}</p>

		<p class="card-text px-0 col-md-8 pb-4">{{ post.preview.length(50).read_more('') }}
			<a aria-label="Continua a leggere: {{ post.title }}"
			   href="{{ post.link }}"
			   class="display-6 stretched-link text-decoration-none arrow ln-0 align-middle">
				&#8674;
			</a>
		</p>
		<hr/>

	</div>
</article>
