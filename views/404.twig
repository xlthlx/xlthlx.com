{% extends "base.twig" %}

{% block content %}

	<article class="post-type-404" id="post-0">

			<div class="row">
				<div class="col-md-8">
					<h2 class="display-5 pb-3">{{ _e( 'Not found') }}</h2>
					<hr class="pt-0 mt-0 mb-4"/>
					<section class="page-content">
						<p class="text-center mb-5 mt-3">
							I criceti che gestiscono questo sito non hanno trovato quello che stavi
							cercando.
						</p>
						<p>
							<img class="img-fluid mx-auto d-block"
								 src="{{ fn('bloginfo','template_directory') }}/assets/img/404.gif" alt="404"/>
						</p>

						<p class="text-center mt-5 mb-4">
							The hamsters running this website have not found what you are looking for.
						</p>
						<div class="text-center mb-5 px-5 mx-5">
							{% include 'searchform.twig' %}
						</div>
					</section>
				</div>
				<div class="col-md-4">
					<aside class="sidebar mt-md-0 mt-4 px-md-4 px-0">
						{% if page_sidebar %}
							{{ page_sidebar }}
						{% endif %}
					</aside>
				</div>
			</div>

	</article>

{% endblock %}
